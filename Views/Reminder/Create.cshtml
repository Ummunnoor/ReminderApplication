@using ReminderApplication.DTOs.RequestModels
@model CreateReminderRequestModel
<form asp-action="Create">
    <div class="form-group">
        @Html.LabelFor(x => x.UserName, new { @class = "control-label col-lg-2" })
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.PhoneNumber, new { @class = "control-label col-lg-2" })
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Reminder Time and Date</label>
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-6">
                    <div class='input-group date' id="datetimepicker">
                        @Html.TextBox("Time", Model.ReminderDateTime, new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EventTitle, new { @class = "control-label col-lg-2" })
        <div class="col-lg-10">
            @Html.TextBoxFor(x => x.EventTitle, new { @class = "form-control", @required = "required" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-lg-2">Event Date</label>
        <div class="col-lg-10">
            <div class="row">
                <div class="col-lg-6">
                    <div class='input-group date' id="datetimepicker">
                        @Html.TextBox("Time", Model.EventDate, new { @class = "form-control" })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
